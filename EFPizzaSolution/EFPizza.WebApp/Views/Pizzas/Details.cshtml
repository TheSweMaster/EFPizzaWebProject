@model EFPizza.WebApp.Models.Pizzas

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Pizzas</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Prize)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Prize)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>

<p>
    <div><b>List of ingredients:</b></div>

    @if (ViewBag.PizzaIngredients.Count != 0)
    {
        @foreach (var ing in ViewBag.PizzaIngredients)
        {
            <div> @ing </div>
        }
    }
    else
    {
        <div>No @Html.DisplayNameFor(Model => Model.PizzaIngredients) was found. </div>
    }
</p>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
